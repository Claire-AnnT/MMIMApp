<UserControl x:Class="MMIMApp.Views.UserViews.SearchUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views.UserViews"
             xmlns:control="clr-namespace:MMIMApp.Views.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1440">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Secondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <control:SideNav HorizontalAlignment="Left"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <control:PageHeader VerticalAlignment="Top" Grid.Row="0" Title="Users"/>

            <Grid Background="{StaticResource Light}" Grid.Row="1">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="64 64">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0 16 ">
                            <Button x:Name="filterBtn" Click="ShowContextMenu_Click">
                                <md:PackIcon Kind="Filter" Height="24" Width="24" Foreground="{StaticResource White}"/>

                                <Button.ContextMenu >
                                    <ContextMenu>
                                        <MenuItem Header="Is Admin" Command="{Binding FilterByAdminCommand}"/>
                                        <MenuItem Header="Is Not Admin" Command="{Binding FilterByNotAdminCommand}"/>
                                        <MenuItem Header="Clear Filters" Command="{Binding ClearFiltersCommand}"/>
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>

                            <TextBox x:Name="searchBox" Foreground="Gray" FontSize="16" Padding="16" Margin="16 0 0 0" BorderThickness="0" Background="White" Width="288" Text="{Binding SearchString,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                            <Button x:Name="addUserBtn" Margin="0 16" Command="{Binding AddUserCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon Kind="Plus" Width="24" Height="24" Foreground="White"/>
                                    <TextBlock Text="Add User" Style="{StaticResource T1}" Foreground="White" Margin="16 0 0 0"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="exportBtn" Margin="16 16 0 16" Command="{Binding ExportCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon Kind="ExportVariant" Width="24" Height="24" Foreground="White"/>
                                    <TextBlock Text="Export" Style="{StaticResource T1}" Foreground="White" Margin="16 0 0 0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <DataGrid ItemsSource="{Binding PagedUsers}" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" SortMemberPath="Username" Width="*"/>

                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" SortMemberPath="FirstName" Width="*"/>

                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" SortMemberPath="LastName" Width="*"/>

                            <DataGridTextColumn Header="Admin" Binding="{Binding IsAdmin}" Width="*"/>

                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}" 
                                Margin="5" Background="Transparent" Padding="0">
                                                <md:PackIcon Kind="Pencil" Width="24" Height="24" Foreground="{StaticResource Info}"/> 
                                            </Button>

                                            <Button Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                CommandParameter="{Binding}" 
                                Background="Transparent" Padding="0">
                                                <md:PackIcon Kind="Delete" Width="24" Height="24" Foreground="{StaticResource Danger}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>   
                    </DataGrid>
                    
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding NumPageItems}" Style="{StaticResource T1}" Foreground="{StaticResource Dark}" Margin="16" Grid.Column="0"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="Foreground" Value="Gray"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button x:Name="prevBtn" Command="{Binding PrevPageCommand}">
                                <md:PackIcon Kind="ChevronLeft" Width="24" Height="24"/>
                            </Button>
                            
                            <Button x:Name="nextBtn" Command="{Binding NextPageCommand}">
                                <md:PackIcon Kind="ChevronRight" Width="24" Height="24"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
            <control:SuccessMessage Grid.Row="1" DataContext="{Binding}" SuccessMessageText="{Binding SuccessMsgBody}" Visibility="{Binding SuccessMsgVisibility}"/>
        </Grid>
    </Grid>
</UserControl>
