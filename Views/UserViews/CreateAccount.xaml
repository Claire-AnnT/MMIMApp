<UserControl x:Class="MMIMApp.Views.UserViews.CreateAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views.UserViews"
             xmlns:control="clr-namespace:MMIMApp.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1440">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{x:Null}">
            <Setter Property="Background" Value="{StaticResource Secondary}"/>
            <Setter Property="Foreground" Value="{StaticResource Light}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="32,16"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{StaticResource Dark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/Views/Src/Logo.png" Width="496" VerticalAlignment="Center"/>

        <Border Grid.Column="1" Padding="64" BorderThickness="0">
            <StackPanel Background="{StaticResource White}" VerticalAlignment="Center">
                <TextBlock Text="Create Account" Style="{StaticResource T4}" Foreground="{StaticResource Dark}" HorizontalAlignment="Center" Margin="0 64 0 16"/>
                <control:FormField FieldLabel="Username *" Margin="64 0 64 16" FieldText="{Binding Username}"/>

                <Grid Margin="64 0 64 16">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <control:FormField Grid.Row="0" Grid.Column="0" FieldLabel="First Name *" Margin="0 0 16 0" FieldText="{Binding FirstName}"/>

                    <control:FormField Grid.Row="0" Grid.Column="1" FieldLabel="Last Name *" Margin="16 0 0 16" FieldText="{Binding LastName}"/>

                    <control:FormField Grid.Row="1" Grid.Column="0" FieldLabel="Password *" Margin="0 0 16 16" FieldText="{Binding Password}"/>

                    <control:FormField Grid.Row="1" Grid.Column="1" FieldLabel="Confirm Password *" Margin="16 0 0 16" FieldText="{Binding Password}"/>
                </Grid>

                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 0 0 64">
                    <Button x:Name="submitBtn" Content="Create Account" FontSize="16" Margin="0 0 0 8" Command="{Binding CreateAccountCommand}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Already have an account?" Style="{StaticResource T1}" />
                        <Button Padding="0" Background="Transparent" Command="{Binding LoginCommand}">
                            <TextBlock Text=" Login" Style="{StaticResource T1}" Foreground="{StaticResource Secondary}"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
