<UserControl x:Class="MMIMApp.Views.Controls.FormField"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views.Controls"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding FieldLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                   Style="{StaticResource T1}" 
                   Foreground="{StaticResource Dark}"
                   Margin="0 0 0 16"
                   />
        <TextBox x:Name="textBox" Height="64" HorizontalAlignment="Stretch" BorderBrush="{StaticResource Secondary}" BorderThickness="2" Text="{Binding FieldText, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="16" VerticalContentAlignment="Center" Padding="16,0" Foreground="Gray"/>
    </StackPanel>
</UserControl>
