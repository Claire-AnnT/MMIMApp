<UserControl x:Class="MMIMApp.Views.Controls.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="1077">
    <Grid Background="{StaticResource White}">
        <Border BorderThickness="0" Padding="64,32">
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource T6}" Foreground="{StaticResource Dark}"/>
        </Border>
    </Grid>
</UserControl>
