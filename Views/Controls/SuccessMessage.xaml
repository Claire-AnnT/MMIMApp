<UserControl x:Class="MMIMApp.Views.Controls.SuccessMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views.Controls"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Border BorderThickness="0" Padding="64 32" Background="White">
        <StackPanel Orientation="Vertical">
            <md:PackIcon Kind="CheckCircle" Width="48" Height="48" Foreground="{StaticResource Success}" HorizontalAlignment="Center"/>
            <TextBlock Text="Successful" Style="{StaticResource T2}" Foreground="{StaticResource Dark}" HorizontalAlignment="Center" Margin="0 32 0 0"/>
            <TextBlock Text="The operation was successful." Style="{StaticResource T1}" Foreground="{StaticResource Dark}" HorizontalAlignment="Center" Margin="0 32 0 0"/>
            <Button Content="Okay" Background="{StaticResource Secondary}" FontWeight="Regular" HorizontalAlignment="Center" Padding="32 15" Style="{x:Null}" BorderThickness="0" Foreground="White" Margin="0 32 0 0"/>
        </StackPanel>
    </Border>
</UserControl>
