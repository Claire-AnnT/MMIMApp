<Window x:Class="MiniMartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1000" Background="#F2F4F7">
    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#1F2937">
            <TextBlock x:Name="txtName" Text="First Name Last Name" Foreground="White" Margin="10,20,10,0" FontWeight="Bold"/>
            <TextBlock x:Name="txtUsername" Text="Username" Foreground="Gray" Margin="10,0,10,20" FontSize="12"/>
            <Button Content="🏠 Home" Click="GoHome_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Foreground="White"/>
            <Button Content="📦 Products" Click="OpenProducts_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Foreground="White"/>
            <Button Content="📊 Reports" Click="OpenReports_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Foreground="White"/>
            <Button Content="👤 Users" Click="OpenUsers_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Foreground="White"/>
            <Button Content="🚪 Logout" Click="Logout_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Foreground="White"/>
        </StackPanel>

        <!-- Main Content Placeholder -->
        <Grid>
            <TextBlock Text="Welcome to MiniMart App" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#1F2937"/>
        </Grid>
    </DockPanel>
</Window>