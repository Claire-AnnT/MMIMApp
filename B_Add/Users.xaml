<Window x:Class="MiniMartApp.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Users" Height="700" Width="1000" Background="#F2F4F7">
    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="#1F2937" VerticalAlignment="Stretch">
            <TextBlock Text="First Name Last Name" Foreground="White" Margin="10,20,10,0" FontWeight="Bold"/>
            <TextBlock Text="Username" Foreground="Gray" Margin="10,0,10,20" FontSize="12"/>
            <Button Content="🏠 Home" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Click="GoHome_Click"/>
            <Button Content="📦 Products" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Click="OpenProducts_Click"/>
            <Button Content="📊 Reports" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Click="OpenReports_Click"/>
            <Button Content="👤 Users" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="10" Background="#374151" Foreground="White" Click="OpenUsers_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Users" FontSize="26" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
                <Button Content="🔍 Search Users" Margin="10,0" Height="30" Width="120" Click="OpenSearchUsers_Click"/>
                <Button Content="＋ Add User" Margin="10,0" Height="30" Width="100" Click="AddUser_Click"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgUsers" Grid.Row="2" AutoGenerateColumns="False" Height="400" Margin="0,10,0,10">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="40"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                    <DataGridTextColumn Header="Access Level" Binding="{Binding AccessLevel}" Width="*"/>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️" Width="30" Height="25" Click="EditUser_Click" Margin="2"/>
                                    <Button Content="🗑" Width="30" Height="25" Click="DeleteUser_Click" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="3" Text="Showing n of n" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0"/>
        </Grid>
    </DockPanel>
</Window>
