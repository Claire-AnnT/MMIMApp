<Window x:Class="MiniMartApp.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Height="600" Width="800" Background="#F2F4F7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Product" FontSize="28" FontWeight="Bold" Margin="40,20,0,10"/>

        <Border Grid.Row="1" Margin="40" Background="White" Padding="20" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                    <TextBlock Text="Product Name" FontWeight="Bold"/>
                    <TextBox x:Name="txtProductName" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                    <TextBlock Text="Brand" FontWeight="Bold"/>
                    <TextBox x:Name="txtBrand" Height="30"/>
                </StackPanel>

                <!-- Second Row -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                    <TextBlock Text="Description" FontWeight="Bold"/>
                    <TextBox x:Name="txtDescription" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Third Row -->
                <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
                    <TextBlock Text="Unit Price" FontWeight="Bold"/>
                    <TextBox x:Name="txtUnitPrice" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
                    <TextBlock Text="Current Units" FontWeight="Bold"/>
                    <TextBox x:Name="txtUnits" Height="30"/>
                </StackPanel>

                <!-- Fourth Row -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
                    <TextBlock Text="Minimum Units" FontWeight="Bold"/>
                    <TextBox x:Name="txtMinUnits" Height="30"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,40,20">
            <Button Content="Cancel" Width="100" Margin="10" Click="Cancel_Click"/>
            <Button Content="Save Changes" Width="140" Margin="10" Click="Save_Click" Background="#1F2937" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
