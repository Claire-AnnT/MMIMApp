<Window x:Class="MiniMartApp.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Report Type"/>
                <ComboBox x:Name="cbReportType" Width="200">
                    <ComboBoxItem Content="Inventory Summary"/>
                    <ComboBoxItem Content="Low Stock Items"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Generate Report" Width="200" Margin="5" Click="GenerateReport_Click"/>
            <DataGrid x:Name="dgReportPreview" Margin="5" AutoGenerateColumns="True" Height="200"/>
            <Button Content="Export to PDF" Width="200" Margin="5" Click="ExportPDF_Click"/>
        </StackPanel>
    </Grid>
</Window>