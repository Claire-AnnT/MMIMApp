<Window x:Class="MiniMartApp.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="520" Width="500" Background="#CBD5E1">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit User" FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Username" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10" Height="30"/>

            <TextBlock Text="First Name" Grid.Row="2" Grid.Column="0" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFirstName" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" Height="30"/>

            <TextBlock Text="Last Name" Grid.Row="2" Grid.Column="1" Margin="10,0,0,5"/>
            <TextBox x:Name="txtLastName" Grid.Row="3" Grid.Column="1" Margin="10,0,0,10" Height="30"/>

            <TextBlock Text="Current Password" Grid.Row="4" Grid.ColumnSpan="2" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtCurrentPassword" Grid.Row="5" Grid.ColumnSpan="2" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="New Password" Grid.Row="6" Grid.ColumnSpan="2" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtNewPassword" Grid.Row="7" Grid.ColumnSpan="2" Height="30" Margin="0,0,0,10"/>

            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Cancel" Width="100" Margin="10,0" Click="Cancel_Click"/>
                <Button Content="Submit" Width="100" Margin="10,0" Click="Submit_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

