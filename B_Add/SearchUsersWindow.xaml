<Window x:Class="MiniMartApp.SearchUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Users" Height="600" Width="800" Background="#F2F4F7">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Search Users" FontSize="26" FontWeight="Bold" Margin="0,0,0,20" />

        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtSearch" Width="250" Height="30" Margin="0,0,10,0" />
                <Button Content="Search" Width="80" Height="30" Click="Search_Click" />
                <Button Content="Cancel" Width="80" Height="30" Margin="10,0,0,0" Click="Cancel_Click" />
            </StackPanel>

            <DataGrid x:Name="dgUsers" AutoGenerateColumns="False" Height="450">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Width="40" />
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*" />
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                    <DataGridTextColumn Header="Access Level" Binding="{Binding AccessLevel}" Width="*" />
                    <DataGridTemplateColumn Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌" Width="24" Height="24" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Showing n of n" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
