<Window x:Class="MiniMartApp.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="400" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Username" Margin="0,5,0,0" />
            <TextBox x:Name="txtUsername" Height="30" />

            <TextBlock Text="First Name" Margin="0,10,0,0" />
            <TextBox x:Name="txtFirstName" Height="30" />

            <TextBlock Text="Last Name" Margin="0,10,0,0" />
            <TextBox x:Name="txtLastName" Height="30" />

            <TextBlock Text="Password" Margin="0,10,0,0" />
            <PasswordBox x:Name="txtPassword" Height="30" />

            <TextBlock Text="Access Level" Margin="0,10,0,0" />
            <ComboBox x:Name="cbAccessLevel" Height="30">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="Editor" />
                <ComboBoxItem Content="Viewer" />
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Submit" Width="80" Margin="5,0" Click="Submit_Click" />
                <Button Content="Cancel" Width="80" Margin="5,0" Click="Cancel_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
