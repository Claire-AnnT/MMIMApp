<Window x:Class="MiniMartApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="550" Width="850" Background="#111827">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="219*"/>
            <ColumnDefinition Width="206*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <Grid Background="#F1F5F9" Margin="40,40,40,40" Grid.Column="0">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Welcome Back" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="txtUsername" Height="30"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,20,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30"/>

                <Button Content="Login" Height="35" Margin="0,30,0,0" Background="#1F2937" Foreground="White" Click="Login_Click"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
    <Run Text="Don't have an account? " />
    <Hyperlink Click="SignUp_Click">
        <Run Text="Sign Up" FontWeight="Bold"/>
    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Right panel placeholder -->
        <Grid Grid.Column="1" Background="#1F2937"/>
    </Grid>
</Window>
