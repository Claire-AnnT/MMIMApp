<Window x:Class="MiniMartApp.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" Height="550" Width="850" Background="#111827">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- Right Panel -->
        <Grid Background="#F1F5F9" Margin="40" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Create an Account" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="txtUsername" Height="30"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="First Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtFirstName" Height="30"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Last Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtLastName" Height="30"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtPassword" Height="30"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Confirm Password" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="txtConfirmPassword" Height="30"/>
                    </StackPanel>
                </Grid>

                <Button Content="Create Account" Height="35" Margin="0,30,0,0" Background="#1F2937" Foreground="White" Click="CreateAccount_Click"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Run Text="Already have an account? "/>
                    <Hyperlink Click="GoToLogin_Click">
                        <Run Text="Log in" FontWeight="Bold"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Left Panel placeholder -->
        <Grid Grid.Column="0" Background="#1F2937"/>
    </Grid>
</Window>
