<UserControl x:Class="MMIMApp.Views.PopupMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="editBtn" Grid.Row="0" Width="128" Height="64" Background="#EAECEE" BorderThickness="0">
            <Grid Width="128" Height="64">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".33*"></ColumnDefinition>
                    <ColumnDefinition Width=".66*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/Resources/Img/i_edit.png" Width="24" VerticalAlignment="Center"></Image>
                <TextBlock Grid.Column="1" Text="Edit" VerticalAlignment="Center" FontSize="16"></TextBlock>
            </Grid>
        </Button>

        <Button x:Name="deleteBtn" Grid.Row="1" Width="128" Height="64" Background="#EAECEE" BorderThickness="0">
            <Grid Width="128" Height="64">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".33*"></ColumnDefinition>
                    <ColumnDefinition Width=".66*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/Resources/Img/i_delete.png" Width="24" VerticalAlignment="Center"></Image>
                <TextBlock Grid.Column="1" Text="Delete" VerticalAlignment="Center" FontSize="16"></TextBlock>
            </Grid>
        </Button>
    </Grid>
</UserControl>
