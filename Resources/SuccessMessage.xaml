<UserControl x:Class="MMIMApp.Resources.SuccessMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="254" d:DesignWidth="432">
    <Grid Background="#EAECEE">
        <StackPanel Orientation="Vertical" Margin="64 24">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="Margin" Value="0 0 0 16"></Setter>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="&#xE73D;" FontFamily="Segoe MDL2 Assets" Foreground="Green" FontSize="48"></TextBlock>
            <TextBlock Text="Successful" FontSize="32"></TextBlock>
            <TextBlock Text="Lorem ipsum dolor amit."></TextBlock>
            <Button Background="#17202A" Foreground="#EAECEE" BorderThickness="0" Height="48" Width="124" Content="Okay"/>
        </StackPanel>
    </Grid>
</UserControl>
