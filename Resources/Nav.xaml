<UserControl x:Class="MMIMApp.Views.Nav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMIMApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="368">
    <Grid Background="#17202a">
        <Grid.RowDefinitions>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".33*"/>
            <RowDefinition Height=".08*"/>
            <RowDefinition Height=".08*"/>
        </Grid.RowDefinitions>

        <!--Nav Header-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".25*"></ColumnDefinition>
                <ColumnDefinition Width=".75*"></ColumnDefinition>
                <ColumnDefinition Width=".25*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid x:Name="nameBox" Grid.Column="1">
                <StackPanel Margin="0 16">
                    <Label Content="First Name Last Name" Foreground="#eaecee" FontWeight="Bold"></Label>
                    <Label Content="Username" Foreground="#eaecee"></Label>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="0">
                <Image x:Name="pfpIcon" Source="/Resources/Img/i_pfp.png" Width="48" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
            </Grid>
            <Grid Grid.Column="2">
                <Image x:Name="logoutBtn" Source="/Resources/Img/i_logout.png" Width="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <!--Nav Buttons-->
        <!--Home Button-->
        <Grid Grid.Row="1">
            <Button x:Name="homeBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_home.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Home" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Products Button-->
        <Grid Grid.Row="2">
            <Button x:Name="productsBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_product.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Products" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Reports Button-->
        <Grid Grid.Row="3">
            <Button x:Name="reportsBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_reports.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Reports" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Categories Button-->
        <Grid Grid.Row="4">
            <Button x:Name="categoriesBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_category.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Categories" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Users Button-->
        <Grid Grid.Row="5">
            <Button x:Name="usersBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_pfp.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Users" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Documentation Button-->
        <Grid Grid.Row="7">
            <Button x:Name="documentationBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_docu.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Documentation" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>

        <!--Repository Button-->
        <Grid Grid.Row="8">
            <Button x:Name="repoBtn" Background="#17202A" BorderThickness="0" Height="64" VerticalAlignment="Center" Width="304" HorizontalAlignment="Left" Margin="16,0,0,0" MouseEnter="btnMouseEnter" MouseLeave="btnMouseLeave">
                <Grid Width="304">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="/Resources/Img/i_git.png" Width="24" Grid.Column="0" Margin="16 0 0 0"></Image>
                    <TextBlock Text="Repository" Grid.Column="1" VerticalAlignment="Center" Margin="16 0 0 0" Foreground="#eaecee"></TextBlock>
                </Grid>
            </Button>
        </Grid>
    </Grid>
</UserControl>
